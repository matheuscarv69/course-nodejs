{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["es2018", "esnext.asynciterable"],
      "outDir": "dist",
      "incremental": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "typeRoots": ["../node_modules/@types"],
      "types": ["node"]
  },
  "include": [        
      "**/*.ts",
      "*.ts",
  ],
  "exclude": [
      "node_modules"
  ],
  "buildOnSave": true,
  "compileOnSave": true
}